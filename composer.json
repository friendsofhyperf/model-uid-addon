{
    "name": "friendsofhyperf/model-uid-addon",
    "description": "The ULID/UUID addon for Hyperf Model.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "php": "^8.0",
        "hyperf/database": "~3.0.0",
        "hyperf/event": "~3.0.0",
        "hyperf/utils": "~3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "ramsey/uuid": "^4.0",
        "symfony/uid": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\ModelUidAddon\\": "src/"
        },
        "files": [
            "macros/blueprint.php",
            "macros/str.php"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "suggest": {
        "ramsey/uuid": "Required to generate UUIDs (^3.0|^4.0)",
        "symfony/uid": "Required to generate ULIDs (^5.0|^6.0)."
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\ModelUidAddon\\ConfigProvider"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 512M -l 0 -c phpstan.neon ./src ./macros ./class_map",
        "cs-fix": "php-cs-fixer fix $1"
    }
}
